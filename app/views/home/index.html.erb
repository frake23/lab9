<div class="py-4 d-flex justify-content-end">
  <%= button_to 'Выйти', '/logout', method: :delete, class: 'btn btn-danger' %>
</div>
<%= form_tag '/' do %>
  <div class="mb-4">
    <label for="arr" class="form-label">Последовательность чисел</label>
    <input
      id="arr"
      name="arr"
      type="text"
      required
      value="1 5 25 0 125 11 1 625 23"
      class="form-control"
    >
  </div>

  <button type="submit" class="btn btn-dark">Получить результат</button>
<% end %>
