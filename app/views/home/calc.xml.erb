<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="some_transformer.xslt"?>
<result>
  <% if flash[:alert] %>
    <error><%= flash[:alert] %></error>
  <% else %>
    <initial><%= @arr.join ' ' %></initial>
    <calculations>
      <% @distances.each do |distance| %>
        <distance><%= distance.join ' ' %></distance>
      <% end %>
    </calculations>
    <answer>
      <%= @max_distance.join ' ' %>
    </answer>
  <% end %>
</result>