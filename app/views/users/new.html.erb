<div class="min-vh-100 d-flex justify-content-center align-items-center">
  <%= form_tag '/users', style: 'width: 500px', class: 'rounded-2 shadow-lg p-4 d-flex flex-column' do %>
    <h2>Зарегестрироваться</h2>
    <div class="mb-4 d-flex flex-column">
      <label for="email" class="form-label">Почта</label>
      <input
        id="email"
        name="email"
        type="email"
        required
        placeholder="Почта"
        class="form-control"
      >
    </div>
    <div class="mb-4 d-flex flex-column">
      <label for="username" class="form-label">Имя пользователя</label>
      <input
        id="username"
        name="username"
        type="text"
        required
        placeholder="Имя пользователя"
        class="form-control"
      >
    </div>
    <div class="mb-4 d-flex flex-column">
      <label for="password" class="form-label">Пароль</label>
      <input
        id="password"
        name="password"
        type="password"
        required
        placeholder="Пароль"
        class="form-control"
      >
    </div>
    <div class="mb-4 d-flex flex-column">
      <label for="password_confirmation" class="form-label">Повторите пароль</label>
      <input
        id="password_confirmation"
        name="password_confirmation"
        type="password"
        required
        placeholder="Повторите пароль"
        class="form-control"
      >
    </div>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <% @user.errors.each do |error| %>
          <div><%= error.message %></div>
        <% end %>
      </div>
    <% end %>
    <button type="submit" class="btn btn-dark mb-2">Регистрация</button>
    <small class="form-text text-muted">Есть аккаунт? <a href="/login">Войдите!</a></small>
  <% end %>
</div>